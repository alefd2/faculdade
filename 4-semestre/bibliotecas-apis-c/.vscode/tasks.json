{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc-11 build OpenGL file",
      "command": "/bin/gcc-11",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/aulas/output/${fileBasenameNoExtension}",
        "-lGL",
        "-lGLU",
        "-lglut"
      ],
      "options": {
        "cwd": "${workspaceFolder}/aulas/output"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "Run OpenGL",
      "type": "shell",
      "command": "${workspaceFolder}/aulas/output/${fileBasenameNoExtension}",
      "dependsOn": "C/C++: gcc-11 build OpenGL file",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
